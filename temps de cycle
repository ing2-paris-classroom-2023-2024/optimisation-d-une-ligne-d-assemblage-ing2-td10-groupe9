#include "header.h"
#include <stdio.h>

void afficherContraintes(Precedence contraintesPrec[], int nombreContraintes) {
    printf("Contraintes de précédence :\n");
    for (int i = 0; i < nombreContraintes; i++) {
        printf("%d -> %d\n", contraintesPrec[i].etat1, contraintesPrec[i].etat2);
    }
}

int lireContraintesDepuisFichier(const char *nomFichier, Precedence contraintes[], int *nombreContraintes) {
    FILE *fichier = fopen(nomFichier, "r");

    if (fichier == NULL) {
        perror("Erreur lors de l'ouverture du fichier");
        return 0;
    }

    *nombreContraintes = 0;

    while (fscanf(fichier, "%d %d", &contraintes[*nombreContraintes].etat1, &contraintes[*nombreContraintes].etat2) == 2) {
        (*nombreContraintes)++;
    }

    fclose(fichier);

    return 1;
}



